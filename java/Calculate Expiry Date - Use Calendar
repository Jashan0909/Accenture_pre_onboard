import java.util.Scanner;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

class Medicine {
    private String manufacturingDate;
    private int validityMonths;
    
    public Medicine(String manufacturingDate, int validityMonths) {
        this.manufacturingDate = manufacturingDate;
        this.validityMonths = validityMonths;
    }
    
    public String calculateExpiryDate() {
        SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
        sdf.setLenient(false);
        
        try {
            Date mfgDate = sdf.parse(manufacturingDate);
            Calendar c = Calendar.getInstance();
            c.setTime(mfgDate);
            c.add(Calendar.MONTH, validityMonths);
            
            Date expiry = c.getTime();
            return sdf.format(expiry) + " is the expiry date";
        } catch (ParseException e) {
            return manufacturingDate + " is not a valid date";
        }
    }
}

public class UserInterface {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        System.out.println("Enter the Manufacturing Date");
        String date = sc.nextLine();
        
        SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
        sdf.setLenient(false);
        
        try {
            sdf.parse(date);
            System.out.println("Enter the Months");
            int months = sc.nextInt();
            
            Medicine med = new Medicine(date, months);
            System.out.println(med.calculateExpiryDate());
        } catch (ParseException e) {
            System.out.println(date + " is not a valid date");
        }
        
        sc.close();
    }
}
